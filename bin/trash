#!/bin/sh

#########################################################################
#
# trash implementation in POSIX script
#
# Originally part of <https://github.com/pirafrank/OSX_utils> repo.
#
# Author: Francesco Pira <dev@fpira.com>
#
#########################################################################

if [ "$#" != 1 ]; then
    echo "trash - move files and folders to trash"
    echo "Usage: trash [file | folder]"
    exit 1
fi

# respect XDG_DATA_HOME if defined
if [ "$XDG_DATA_HOME" != "" ]; then
  TRASH_PATH="$XDG_DATA_HOME/Trash"
else
  # fallback for Darwin and more Linux
  TRASH_PATH="$HOME/.Trash"
fi

mkdir -p "$TRASH_PATH"
mv -f "$1" "$TRASH_PATH/$(basename "$1")\+$(date '+%Y-%m-%d_%H%M%S')"

